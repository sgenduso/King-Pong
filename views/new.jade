extends layout

block content
  div.addStats
    h1.newStats= title
    for error in errors
      p.error= error
    form(action='/add' method='post')
      div#required *required
      div
        label(for='player1') 
          span *
          |Player 1: 
        select(id='player1' name='player1')
          option(selected disabled value='choose') Choose Player
          for name in names
            option(value=name) 
              =name
      div
        label(for='player2') 
          span *
          |Player 2: 
        select(id='player2' name='player2')
          option(selected disabled value='choose') Choose Player
          for name in names
            option(value=name) 
              =name
      div
        label(for='points') 
          span *
          |Played to How Many Points? 
        input(type='number' id='points' name='points' min= 0 max=21)
      div#winner
        label(for='winner') 
          span *
          |WINNER: 
        input(type='radio' id='one-won' name='winner' value='one-won')
        label#name1(for='one-won') 
          i Choose Player 1 &nbsp;
        input(type='radio' id='two-won' name='winner' value='two-won')
        label#name2(for='two-won')
          i Choose Player 2 &nbsp;
      div
        label(for='score') SCORE:
        input(type='number' id='player1-score' name='p1_score' min= 0)
        label#score1(for='player1-score') 
          i Choose Player 1 &nbsp;
        input(type='number' id='player2-score' name='p2_score' min= 0)
        label#score2(for='player2-score') 
          i Choose Player 2 &nbsp;
      div
        label(for='date') 
          span *
          |Date:
        input(type='date' id='date' name='date' min='2015-05-18')
      div
        label(for='time') Time:
        input(type='time' id='time' name='time')
      div
        label(for='comments') Comments?
        textarea(id='comments' name='comments')
      div
        input#submit(type='submit' value='RECORD STATS')
  script(src='../../javascripts/client.js' type='text/javascript')          
